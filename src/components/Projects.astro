---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import ReactJS from "./icons/ReactJS.astro";
import NodeJS from "./icons/NodeJS.astro";
import TypeScript from "./icons/Typescript.astro";
import Supabase from "./icons/Supabase.astro";
import Django from "./icons/Django.astro";
import Python from "./icons/Python.astro";
const { translations } = Astro.props;

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-white text-black",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: ReactJS,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-[#68A063] text-white",
    icon: NodeJS,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#3178C6] text-white",
    icon: TypeScript,
  },
  SUPABASE: {
    name: "Supabase",
    class: "bg-[#639] text-white",
    icon: Supabase,
  },
  DJANGO: {
    name: "Django",
    class: "bg-[#092E20] text-white",
    icon: Django,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#FF3E00] text-white",
    icon: Python,
  },
};

const PROJECTS = [
  {
    title: translations.PROJECTS[0].title,
    description: translations.PROJECTS[0].description,
    link: "https://marketplace.visualstudio.com/items?itemName=gabrielbalderrama.safedev-vulnerabilities-analyzer",
    github:
      "https://github.com/6abriel1chiro/js-vulnerabilities-analysis-extension",
    image: "/img/vscode.webp",
    tags: [TAGS.TYPESCRIPT, TAGS.REACT, TAGS.NODEJS],
  },
  {
    title: translations.PROJECTS[1].title,
    description: translations.PROJECTS[1].description,
    link: "https://6abriel1chiro.github.io/statistix.io/",
    github: "https://github.com/6abriel1chiro/statistix.io",
    image: "/img/statistix.webp",
    tags: [TAGS.TYPESCRIPT, TAGS.TAILWIND, TAGS.REACT],
  },
  {
    title: translations.PROJECTS[2].title,
    description: translations.PROJECTS[2].description,
    link: "https://gym-membership-system.vercel.app/",
    github: "https://github.com/6abriel1chiro/gym-saas",
    image: "/img/gym-management.webp",
    tags: [TAGS.TYPESCRIPT, TAGS.TAILWIND, TAGS.NEXT, TAGS.SUPABASE],
  },
  {
    title: translations.PROJECTS[3].title,
    description: translations.PROJECTS[3].description,
    link: "",
    github: "https://github.com/6abriel1chiro/gh-progress-track-app",
    image: "/img/gh-progress-tracker.jpeg",
    tags: [TAGS.DJANGO, TAGS.PYTHON],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="project"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
