---
const personalImageAlt = "Gabriel Ichiro Ángel"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/img/me.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/gabriel-ichiro/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Gabriel
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-green-200 [&>strong]:text-green-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    +5 años de formacion entorno a tecnologia. <strong
      >Ingeniero de Software y Creador de Contenido sobre Programación</strong
    > de Cochabamba, Bolivia. Especializado en el desarrollo de aplicaciones web y Mobile.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:ichiro6864@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/gabriel-ichiro/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
