---
let { title, description, imageUrl, projectUrl } = Astro.props;
---

<div class="project-card">
  <a href={projectUrl}>
    <img src={imageUrl} alt={title} />
    <h2>{title}</h2>
    <p>{description}</p>
  </a>
</div>
<style>
  .project-card {
    border: 1px solid #ccc;
    padding: 1em;
    margin: 1em;
    text-align: center;
  }
  .project-card img {
    width: 100%;
    height: auto;
  }
</style>