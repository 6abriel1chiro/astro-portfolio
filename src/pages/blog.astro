---
import Layout from "../layouts/Layout.astro";
import BlogPost from "../components/BlogPost.astro";
const pageTitle = "Tech and projects Blog";
const allPosts = await Astro.glob("../pages/blogPosts/*.md");
---

<Layout title={pageTitle}>
  <h2 class="text-white font-semibold">This is where I will post about my journey</h2>
  <ul class="mt-4">
    {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} description={post.frontmatter.description}/>)}
  </ul>
</Layout>